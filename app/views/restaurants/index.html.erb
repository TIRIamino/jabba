<h1>Les restaurants</h1>

<%= link_to "Add a new restaurant", new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
 <h2><%= restaurant.name %></h2>
 <p><%= restaurant.address %></p>
 <p><%= "*" * restaurant.stars %></p>
<%= link_to "See this restaurant", restaurant_path(restaurant) %>
<%= link_to("Delete", restaurant_path(restaurant), method: :delete) %>
<% end %>
